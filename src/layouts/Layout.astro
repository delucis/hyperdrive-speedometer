---
import { screenshotUrl } from "../util/screenshotAPI";

const title = 'Hyperdrive Speedometer üöÄ'
const description = 'Benchmarking the performance of web sites built with Astro.';
const canonical = Astro.canonicalURL.href;
const ogImageSrc = screenshotUrl(canonical);
const ogImageAlt = `Screenshot of ‚Äú${title}‚Äù`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{title}</title>
		<link rel="canonical" href={canonical}>
		<meta name="description" content={description}>
		<link rel="stylesheet" href="/style.css">

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={canonical}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content={ogImageSrc}>
		<meta property="og:image:alt" content={ogImageAlt} />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="swithinbank" />
		<meta property="twitter:domain" content={Astro.site.hostname}>
		<meta property="twitter:url" content={canonical}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content={ogImageSrc}>
		<meta name="twitter:image:alt" content={ogImageAlt} />
	</head>
	<body>
		<h1>Hyperdrive Speedometer</h1>
    <p>Benchmarking the performance of Astro sites over time.</p>
		<slot />
		<footer>
			MIT licensed. Built with <a href="https://astro.build/">Astro</a>. Source code on <a href="https://github.com/delucis/hyperdrive-speedometer">GitHub</a>. Based on <a href="https://github.com/zachleat/speedlify/">Speedlify</a> by <a href="https://www.zachleat.com/">@zachleat</a>.
		</footer>
	</body>
</html>
